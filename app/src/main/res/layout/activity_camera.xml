<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:background="@color/colorPrimary"
    tools:context=".CameraActivity">

    <TextView
        android:id="@+id/name_view"
        android:layout_width='match_parent'
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:text="@string/label_scan_barcode" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/barcode_view"
            android:layout_width='wrap_content'
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:text="@string/label_scan_barcode" />


        <TextView
            android:id="@+id/piramyd_received_view"
            android:layout_width='wrap_content'
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:text="@string/received"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="16sp" />
    </LinearLayout>

    <TextureView
        android:id="@+id/camera_texture_view"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="5dp"/>



    <Button
        android:padding="20dp"
        android:id="@+id/button_save_barcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="@string/label_write_barcode"
        android:visibility="invisible"
        android:onClick="writeBarcode"/>


</LinearLayout>
